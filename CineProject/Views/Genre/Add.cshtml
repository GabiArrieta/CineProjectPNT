@model CineProject.Models.Domain.Genre
@{
}

<form class="w-40" asp-action="Add" method="post">
    <h2 class="pb-10">Agregar genero de pelicula</h2>
    <div class="input-container">
        <label asp-for="GenreName" class="w-40">NombreGenero</label>
        <input type="text" class="input" asp-for="GenreName">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="GenreName"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Guardar</button>
        <a class="btn btn-sec" href="/Genre/GenreList">Listado completo</a>
    </div>
</form>